{
  "name": "rcast",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write '{src,scripts}/**/*.{js,css,json}'",
    "lint": "eslint src/ scripts/",
    "test": "jest",
    "clean": "rm -rf dist/",
    "build": "rollup -c ./scripts/rollup.config.js",
    "generate-sw": "node ./scripts/generate-sw.js",
    "postinstall": "yarn clean && yarn build && yarn generate-sw",
    "start": "node ./src/server/index.js"
  },
  "dependencies": {
    "express": "^4.16.4",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@lwc/compiler": "^0.33.26",
    "@lwc/engine": "^0.33.26",
    "@lwc/eslint-plugin-lwc": "^0.6.0",
    "@lwc/rollup-plugin": "^0.33.26",
    "@lwc/wire-service": "^0.33.26",
    "cpy": "^7.0.1",
    "eslint": "^5.10.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "rollup": "^1.0.0",
    "rollup-plugin-alias": "^1.5.1",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^4.0.1"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "all",
    "singleQuote": true
  }
}
